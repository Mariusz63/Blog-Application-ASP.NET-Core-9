@model Post

@{
    ViewData["Title"] = "Post Details";
}
<style>
    .content-rapper {
        padding: 20px;
        max-width: 1000px;
        margin: 0 auto;
        font-family: sans-serif;
    }

    .feature-image {
        width: 100%;
        height: 500px;
        margin: 20px 0;
        border-radius: 8px;
    }
</style>

<div class="text-end">
    <a class="btn btn-secondary my-3" asp-action="Edit" asp-controller="Post" asp-route-id="@Model.Id">Edit Post</a>
    <a class="btn btn-danger my-3 mx-3" asp-action="Delete" asp-controller="Post" asp-route-id="@Model.Id">Delete Post</a>
</div>

<div calss="content-wrapper">
    <h1>@Model.Title</h1>
    <p>
        <span class="badge bg-primary">By:</span> @Model.Author |
        <span class="text-muted">Published on </span>
        @Model.PublishedDate.ToString("dd MMM yyyy")
    </p>
    <p><span class="badge bg-secondary">Category</span> @Model.Category.Name</p>
    <img src="@Model.FeatureImagePath" alt="@Model.Title" class="feature-image" />
    <hr />
    <div>@Html.Raw(Model.Content)</div>
    <hr />

    <div id="commentSection">
        @if (Model.Comments.Any())
        {
            foreach (var comment in Model.Comments)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@comment.Author</h5>
                        <p class="card-text text-muted">@comment.PostedDate.ToString("dd MMM yyyy HH:mm")</p>
                        <p class="card-text">@comment.Content</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p id="noComments">No comments yet. Be the first to comment!</p>
        }
    </div>


    <hr />
    <h4>Add a Comment</h4>
    <form id="commentForm">
        <div class="form-group">
            <label for="Author">Name</label>
            <input for="Author" id="Author" class="form-control" name="Author" required class="form-control" />
        </div>
        <div class="form-group">
            <label for="Content">Content</label>
            <textarea for="Content" id="Content" name="Content" rows="3" required class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-2 p-2 rounded">Submit Comment </button>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $("#commentForm").on("submit", function (event) {
                event.preventDefault();

                var author = $("#Author").val();
                var content = $("#Content").val();
                var postId = @Model.Id;

                $.ajax({
                    url: '@Url.Action("AddComment", "Post")',
                    type: 'POST',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify({
                        author: author,
                        content: content,
                        postId: postId
                    }),
                    success: function (response) {
                        $('commentForm').[0].reset();
                        $("#commentSection").append(`
                            <div class="card mb-3 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">${response.author}</h5>
                                    <p class="card-text text-muted">${response.postedDate}</p>
                                    <p class="card-text">${response.content}</p>
                                </div>
                            </div>
                        `);

                        // wyczyść formularz
                        $("#Author").val("");
                        $("#Content").val("");
                    }
                });
            });

        });
    </script>
}
